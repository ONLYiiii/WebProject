<%- include('includes/head.ejs')%>
    <link rel="stylesheet" href="/css/courses.css">
</head>
<body>
    
    <%- include('includes/navigation.ejs')%>
    <main>
        <section class="section_course">
            <div class="container">
                <div class="d-flex justify-content-between align-items-center">
                <h2><%= coursedt.id %> <%= coursedt.subject_th %></h2>
                <ol>
                    <li><a href="#">หน้าแรก</a></li>
                    <li><%= coursedt.subject_th %></li>
                </ol>
                </div>
            </div>
        </section>
        <section class="courses_detail">
            <div class="container-fluid">
                <div class="row gy-4">
                    <div class="col-lg-7">
                        <img src="/image/image_course-list.png" alt="">
                    </div>
                    <div class="col-lg-4">
                        <% if(coursedt) { %>
                            <div class="courses-info">
                                <h5><i class="fa-solid fa-desktop"></i> รหัสวิชา <%= coursedt.id %></h5>
                                <h2><%= coursedt.subject_th %></h2>
                                <h4><%= coursedt.subject_eng %></h4>
                                <ul>
                                    <li class="description_study">
                                        <strong>หน่วยกิต (บรรยาย-ปฎิบัติการ): </strong><%= coursedt.credit %>
                                    </li>
                                    <% if (coursedt.pre_study_id !=  "") { %>
                                        <li class="description_study">
                                            <strong>วิชาที่ต้องเรียนมาก่อน: </strong><a href="/cs<%= coursedt.pre_study_id %>"><%= coursedt.pre_study_id %></a>
                                        </li>
                                    <% } %>
                                    <li><strong>เนื้อหา: </strong><%= coursedt.description_th %></li>
                                    <li><%= coursedt.description_eng %></li>
                                </ul>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </section>
    </main>
    <%- include('includes/footer.ejs')%>
    <%- include('includes/script.ejs')%>
</body>
</html>
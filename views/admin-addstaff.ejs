<%- include('includes/head.ejs')%>
    <link rel="stylesheet" href="/css/admin.css">
</head>
<body>

    <%- include('includes/navigation.ejs')%>
    <main>
        <section class="section_course">
            <div class="container">
                <div class="d-flex justify-content-between align-items-center">
                <h2>กรอกข้อมูลคณาจารย์</h2>
                <ol>
                    <li><a href="#">หน้าแรก</a></li>
                    <li>กรอกข้อมูลคณาจารย์</li>
                </ol>
                </div>
            </div>
        </section>
        <section class="section_addstaff">
            <div class="container-fluid">
                <div class="row col-lg-12 col-md-6 mx-auto">
                    <div class="col_left col">
                        <img src="/image/image_course-list.png" class="img-fluid" alt="" data-aos="zoom-in"data-aos-delay="100">
                    </div>
                    <div class="col_right col" data-aos="fade-up" data-aos-delay="200">
                        <div class="card">
                            <div class="card-body">
                                <div class="pt-5 pb-2">
                                    <h5 class="card-title text-center pb-0 fs-4">กรอกข้อมูลคณาจารย์</h5>
                                </div>
                                <div class="divider mx-auto"></div>
                                <form class="row g-3 needs-validation" action="/admin/add-staff" method="POST" enctype="multipart/form-data">
                                        <div class="col-12">
                                            <label for="id" class="form-label">รหัสอาจารย์</label>
                                            <div class="input-group">
                                                <span class="input-group-text" id="inputGroupPrepend"><i class="fa-regular fa-id-badge"></i></span>
                                                <input type="text" name="id" class="form-control" required>
                                            </div>
                                            <label for="name_th" class="form-label">ชื่อภาษาไทย</label>
                                            <div class="input-group">
                                                <span class="input-group-text" id="inputGroupPrepend"><i class="fa-regular fa-user"></i></span>
                                                <input type="text" name="name_th" class="form-control" required>
                                            </div>
                                            <label for="name_eng" class="form-label">ชื่อภาษาอังกฤษ</label>
                                            <div class="input-group">
                                                <span class="input-group-text" id="inputGroupPrepend"><i class="fa-regular fa-user"></i></span>
                                                <input type="text" name="name_eng" class="form-control" required>
                                            </div>
                                            <label for="office" class="form-label">สถานที่ทำงาน</label>
                                            <div class="input-group">
                                                <span class="input-group-text" id="inputGroupPrepend"><i class="fa-regular fa-building"></i></span>
                                                <input type="text" name="office" class="form-control" required>
                                            </div>
                                            <label for="email" class="form-label">อีเมล</label>
                                            <div class="input-group">
                                                <span class="input-group-text" id="inputGroupPrepend"><i class="fa-regular fa-envelope"></i></span>
                                                <input type="email" name="email" class="form-control" required>
                                            </div>
                                            <label for="image" class="form-label">อัพโหลดรูปภาพอาจารย์</label>
                                            <input class="form-control form-control-lg" id="formFileLg" type="file" name="image">
                                        </div>
                                        <button class="btn btn-primary w-100" type="submit">บันทึกข้อมูล</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
    <%- include('includes/footer.ejs')%>
    <%- include('includes/script.ejs')%>
</body>
</html>